
<%= form_for @todo do |f| %>
	
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_area :description %>
	
	<%= f.radio_button :status, 'Not Started', :checked => true %>
	<%= label :not_started, "Not Started" %>
	<%= f.radio_button :status, 'In Progress' %>
	<%= label :in_progress, 'In Progress' %>
	<%= f.radio_button :status, 'Completed' %>
	<%= label :completed, 'Completed' %>

	<%= f.hidden_field :todo_list_id, value: session[:todo_list] %>
	
	<%= f.hidden_field :user_id, value: current_user.id %>
	
	<%= f.submit %>

<% end %>