<h1><%= "#{@todo_list.name}" %></h1>

<p>Todo's</p>
	<% @todo_list.todos.each do |todo| %>
		<li id=<%= "#{todo.id}" %>>Task: <%= "#{todo.name}" %></li>
		<p>Description: <%= "#{todo.description}" %></p>
		<p>Status: <%= "#{todo.status}" %></p>
		<p>Created At: <%= "#{todo.created_at}" %></p>
	<% end %>
	
<div>
<%= link_to "Add a Todo Item", new_todo_path %>
</div>
<div>
<%= link_to "Edit", edit_todo_list_path %>
</div>
<div>
<%= link_to "Home", todo_lists_path %>
</div>	